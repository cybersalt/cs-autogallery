<?xml version="1.0" encoding="UTF-8"?>
<extension type="plugin" group="content" method="upgrade">
    <name>plg_content_autogallery</name>
    <author>ColdStar Technology</author>
    <creationDate>2024-11</creationDate>
    <copyright>(C) 2024 ColdStar Technology. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later</license>
    <authorEmail>info@coldstartech.com</authorEmail>
    <authorUrl>https://coldstartech.com</authorUrl>
    <version>1.5.0</version>
    <description>PLG_CONTENT_AUTOGALLERY_XML_DESCRIPTION</description>
    <namespace path="src">ColdStar\Plugin\Content\Autogallery</namespace>
    <files>
        <folder plugin="autogallery">services</folder>
        <folder>src</folder>
        <filename>index.html</filename>
    </files>
    <languages>
        <language tag="en-GB">language/en-GB/plg_content_autogallery.ini</language>
        <language tag="en-GB">language/en-GB/plg_content_autogallery.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic" label="PLG_CONTENT_AUTOGALLERY_FIELDSET_BASIC">
                <field
                    name="base_fs"
                    type="text"
                    label="PLG_CONTENT_AUTOGALLERY_BASE_FS_LABEL"
                    description="PLG_CONTENT_AUTOGALLERY_BASE_FS_DESC"
                    default="{JPATH_ROOT}/images/music"
                />
                <field
                    name="base_url"
                    type="text"
                    label="PLG_CONTENT_AUTOGALLERY_BASE_URL_LABEL"
                    description="PLG_CONTENT_AUTOGALLERY_BASE_URL_DESC"
                    default="/images/music"
                />
                <field
                    name="extensions"
                    type="text"
                    label="PLG_CONTENT_AUTOGALLERY_EXT_LABEL"
                    description="PLG_CONTENT_AUTOGALLERY_EXT_DESC"
                    default="jpg,jpeg,png,gif,webp,avif"
                />
                <field
                    name="col_classes"
                    type="text"
                    label="PLG_CONTENT_AUTOGALLERY_COLS_LABEL"
                    description="PLG_CONTENT_AUTOGALLERY_COLS_DESC"
                    default="col-6 col-sm-4 col-md-3 col-lg-3"
                />
                <field
                    name="show_captions"
                    type="radio"
                    label="PLG_CONTENT_AUTOGALLERY_CAPTIONS_LABEL"
                    description="PLG_CONTENT_AUTOGALLERY_CAPTIONS_DESC"
                    layout="joomla.form.field.radio.switcher"
                    default="1"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                    name="show_empty_message"
                    type="radio"
                    label="PLG_CONTENT_AUTOGALLERY_EMPTY_LABEL"
                    description="PLG_CONTENT_AUTOGALLERY_EMPTY_DESC"
                    layout="joomla.form.field.radio.switcher"
                    default="1"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                    name="show_debug_path"
                    type="radio"
                    label="PLG_CONTENT_AUTOGALLERY_DEBUG_LABEL"
                    description="PLG_CONTENT_AUTOGALLERY_DEBUG_DESC"
                    layout="joomla.form.field.radio.switcher"
                    default="0"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
            </fieldset>
            <fieldset name="thumbnails" label="PLG_CONTENT_AUTOGALLERY_FIELDSET_THUMBNAILS">
                <field
                    name="thumb_min_w"
                    type="text"
                    label="PLG_CONTENT_AUTOGALLERY_THUMB_MIN_W_LABEL"
                    description="PLG_CONTENT_AUTOGALLERY_THUMB_MIN_W_DESC"
                />
                <field
                    name="thumb_max_w"
                    type="text"
                    label="PLG_CONTENT_AUTOGALLERY_THUMB_MAX_W_LABEL"
                    description="PLG_CONTENT_AUTOGALLERY_THUMB_MAX_W_DESC"
                />
                <field
                    name="thumb_min_h"
                    type="text"
                    label="PLG_CONTENT_AUTOGALLERY_THUMB_MIN_H_LABEL"
                    description="PLG_CONTENT_AUTOGALLERY_THUMB_MIN_H_DESC"
                />
                <field
                    name="thumb_max_h"
                    type="text"
                    label="PLG_CONTENT_AUTOGALLERY_THUMB_MAX_H_LABEL"
                    description="PLG_CONTENT_AUTOGALLERY_THUMB_MAX_H_DESC"
                />
            </fieldset>
        </fields>
    </config>
</extension>
