<?xml version="1.0" encoding="UTF-8"?>
<extension type="plugin" group="content" method="upgrade" version="5.0">
  <name>plg_content_csautogallery</name>
  <author>Tim Davis - Cybersalt Consulting Ltd.</author>
  <version>1.6.1</version>
  <description>Bootstrap 5 gallery with optional GLightbox. Auto-scans folder mapped from URL or shortcode.</description>
  <files>
    <filename plugin="csautogallery">csautogallery.php</filename>
    <filename>index.html</filename>
    <folder>language</folder>
  </files>
  <config>
    <fields name="params">
      <fieldset name="basic" label="Settings">
        <field name="enable_lightbox" type="radio" label="Enable Lightbox" description="Enable popup on image click" class="btn-group btn-group-yesno" default="1">
          <option value="1">JYES</option>
          <option value="0">JNO</option>
        </field>
        <field name="base_fs" type="text" label="Base Filesystem Folder" description="Absolute path for galleries" default="{JPATH_ROOT}/images/music" />
        <field name="base_url" type="text" label="Base Public URL" description="Public URL for galleries" default="/images/music" />
        <field name="extensions" type="text" label="Allowed Extensions" description="Comma-separated extensions" default="jpg,jpeg,png,gif,webp,avif" />
        <field name="col_classes" type="text" label="Grid Column Classes" description="Bootstrap column classes. Use col-auto for fixed-size thumbnails." default="col-6 col-sm-4 col-md-3 col-lg-3" />
        <field name="thumb_size" type="text" label="Thumbnail Size" description="CSS size for square thumbnails (e.g., 120px, 150px). Leave empty for responsive sizing." default="" />
        <field name="filename_prefix" type="text" label="Filename Prefix Filter" description="Only show images starting with this prefix (e.g., pi- or spi-). Comma-separated for multiple prefixes. Leave empty to show all." default="" />
        <field name="show_captions" type="radio" label="Show Captions" description="Show captions in lightbox" class="btn-group btn-group-yesno" default="1">
          <option value="1">JYES</option>
          <option value="0">JNO</option>
        </field>
        <field name="show_empty_message" type="radio" label="Show Empty Message" description="Show message when no images" class="btn-group btn-group-yesno" default="1">
          <option value="1">JYES</option>
          <option value="0">JNO</option>
        </field>
        <field name="show_debug_path" type="radio" label="Show Debug Path" description="Show debug info" class="btn-group btn-group-yesno" default="0">
          <option value="1">JYES</option>
          <option value="0">JNO</option>
        </field>
      </fieldset>
    </fields>
  </config>
</extension>
